/**app.wxss**/
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

/* 清除浮动 */
.clearfix:after {
  content: "";
  display: block;
  clear: both;
}

/* 常用颜色 */
.primary-color {
  color: #FF8C69;
}

.primary-bg {
  background-color: #FF8C69;
}

/* 常用布局 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-around {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

/* 常用间距 */
.margin-top-sm {
  margin-top: 10rpx;
}

.margin-top {
  margin-top: 20rpx;
}

.margin-top-lg {
  margin-top: 40rpx;
}

.margin-bottom-sm {
  margin-bottom: 10rpx;
}

.margin-bottom {
  margin-bottom: 20rpx;
}

.margin-bottom-lg {
  margin-bottom: 40rpx;
}

.padding-sm {
  padding: 10rpx;
}

.padding {
  padding: 20rpx;
}

.padding-lg {
  padding: 40rpx;
}

/* 常用文本样式 */
.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.text-bold {
  font-weight: bold;
}

.text-price {
  color: #ff4d4f;
  font-weight: bold;
}

.text-gray {
  color: #999;
}

.text-small {
  font-size: 12px;
}

.text-large {
  font-size: 16px;
}

.text-xl {
  font-size: 18px;
}

.text-xxl {
  font-size: 22px;
}

.text-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 常用按钮样式 */
.btn {
  display: inline-block;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  text-align: center;
  box-sizing: border-box;
}

.btn-primary {
  background-color: #FF8C69;
  color: #fff;
}

.btn-outline {
  border: 1px solid #FF8C69;
  color: #FF8C69;
  background-color: transparent;
}

.btn-gray {
  background-color: #f5f5f5;
  color: #666;
}

.btn-block {
  display: block;
  width: 100%;
}

.btn-sm {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
}

.btn-lg {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  padding: 0 40rpx;
}

/* 常用卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-body {
  padding: 20rpx;
}

.card-footer {
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

/* 徽标 */
.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 18rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  padding: 0 6rpx;
  box-sizing: border-box;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 0 16rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  margin-right: 10rpx;
}

.tag-primary {
  background-color: rgba(255, 140, 105, 0.1);
  color: #FF8C69;
}

.tag-success {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.tag-warning {
  background-color: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

.tag-danger {
  background-color: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
}

/* 图片样式 */
.img-responsive {
  width: 100%;
  height: auto;
  display: block;
}

.img-round {
  border-radius: 12rpx;
}

.img-circle {
  border-radius: 50%;
}

/* 空状态 */
.empty-state {
  padding: 60rpx 0;
  text-align: center;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  color: #999;
  font-size: 28rpx;
}

/* 底部安全区适配 */
.safe-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 底部固定按钮 */
.fixed-bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  padding: 20rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}
