/* pages/user/index.wxss */
.user-page {
  background-color: #f4f4f4; /* 页面背景色 */
  min-height: 100vh;
  padding-bottom: 20rpx; /* 给底部留出一些空间 */
  box-sizing: border-box;
}

.user-info-card {
  background-color: #FF8C69; /* 顶部用户信息区域背景色，与截图类似 */
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx; /* 与下方卡片间距 */
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff; /* 头像白色边框 */
  margin-right: 30rpx;
}

.nickname {
  font-size: 36rpx;
  color: #fff; /* 昵称白色 */
  font-weight: bold;
}

.login-button {
  background-color: transparent;
  color: #fff;
  font-size: 32rpx;
  padding: 10rpx 30rpx;
  border: 1px solid #fff; /* 登录按钮白色边框 */
  border-radius: 30rpx;
  line-height: 1.5;
  margin: 0; /* 清除默认的button外边距 */
}
.login-button::after { /* 清除button的默认边框 */
  border: none;
}


.section-card {
  background-color: #fff; /* 卡片背景白色 */
  border-radius: 16rpx; /* 卡片圆角 */
  margin: 0 20rpx 20rpx; /* 卡片外边距 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05); /* 卡片轻微阴影 */
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx; 
  border-bottom: 1rpx solid #eee; 
}
.section-header:last-child { 
  border-bottom: none;
}


.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.all-orders {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

.order-status-grid {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0; 
}

.order-status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  position: relative; 
  width: 100rpx; 
  text-align: center;
}

.order-status-icon {
  width: 64rpx; 
  height: 64rpx;
  margin-bottom: 10rpx;
}

.badge {
  position: absolute;
  top: -10rpx; 
  right: -5rpx; 
  background-color: #ff4d4f; 
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 16rpx; 
  min-width: 32rpx; 
  text-align: center;
  line-height: 1.2;
}

.menu-section {
  padding: 10rpx 0 10rpx 40rpx; /* 重点修改这里：增加了左内边距 40rpx */
                                /* 上下各10rpx的内边距，右边距为0，因为menu-item自己有右边距 */
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx 30rpx 0; /* 修改这里：左内边距设为0，因为父级 menu-section 已经有了 */
                                /* 上下内边距30rpx，右内边距30rpx */
  border-bottom: 1rpx solid #f5f5f5; 
}

.menu-item:last-child {
  border-bottom: none; 
}

.menu-icon {
  width: 48rpx; 
  height: 48rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
  flex: 1; 
}

.recommend-section {
  padding: 0 30rpx; 
}

.recommend-section .section-header {
  border-bottom: none; 
  padding-top: 30rpx; 
  padding-bottom: 20rpx; 
  padding-left: 0; 
  padding-right: 0;
}

.product-grid {
  display: flex;
  flex-wrap: wrap; 
  justify-content: space-between; 
  padding-bottom: 20rpx;
}

.product-item {
  width: calc(50% - 10rpx); 
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
}
.product-item:nth-child(odd){
}


.product-image {
  width: 100%;
  height: 300rpx; 
  background-color: #f0f0f0; 
}

.product-name {
  font-size: 26rpx;
  color: #333;
  padding: 10rpx 16rpx;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis; 
}

.product-price {
  font-size: 28rpx;
  color: #ff4d4f; 
  font-weight: bold;
  padding: 0 16rpx 16rpx;
}
