/* pages/detail/index.wxss */
.page-container {
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
  /* padding-bottom: 100rpx; */ /* 由 .bottom-placeholder 占位 */
}

.product-swiper {
  width: 100%;
  height: 750rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.product-info-section {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.price-share-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.price-container {
  display: flex;
  align-items: baseline;
}

.current-price {
  font-size: 44rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-right: 10rpx;
}

.original-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
}

.share-button {
  background-color: transparent;
  border: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  color: #666;
  line-height: normal;
}
.share-button::after {
  border: none;
}

.share-icon {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 4rpx;
}

.product-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  line-height: 1.4;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sales-stock-row {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.section {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}
.section:last-child {
  margin-bottom: 0;
}

.section-title-label {
  font-weight: bold;
}
.spec-selection-section .spec-text {
  color: #666;
  flex: 1;
  text-align: right;
  margin-right: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow-right-icon {
  width: 24rpx;
  height: 24rpx;
}

.service-section .section-title-label {
  align-self: flex-start;
}
.service-items-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  flex: 1;
  margin-left: 20rpx;
}
.service-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}
.service-item:last-child {
  margin-bottom: 0;
}
.service-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}


.review-preview-section {
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
}
.view-all-reviews {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.review-list {
  width: 100%;
}
.review-item {
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
}
.review-item:first-child {
  border-top: none;
  padding-top: 0;
}
.review-user-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.user-name-rating {
  flex: 1;
}
.user-name {
  font-size: 26rpx;
  color: #333;
  display: block;
}
.review-rating {
  font-size: 22rpx;
  color: #ffb400;
}
.review-time {
  font-size: 22rpx;
  color: #999;
}
.review-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.review-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}
.review-image-item {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background-color: #eee;
}
.no-reviews {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 30rpx 0;
}

.product-detail-description-section {
  display: block;
  padding-bottom: 30rpx;
}
.product-detail-description-section .detail-title {
  margin-bottom: 20rpx;
  display: block;
}
.product-detail-description-section rich-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.bottom-placeholder {
  height: 100rpx; /* 与底部操作栏高度一致 */
  width: 100%;
}

/* 底部操作栏 - 样式优化 */
.bottom-actions-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 999;
  padding: 0 10rpx; /* 整体左右内边距 */
  box-sizing: border-box;
}

.actions-left {
  display: flex;
  align-items: center;
  /* justify-content: space-around; */ /* 改为 space-between 或固定间距 */
  height: 100%;
  /* flex-grow: 1; */ /* 左侧不再自动增长，固定宽度或让子项决定 */
  flex-shrink: 0; /* 防止被压缩 */
  margin-right: 10rpx; /* 与右侧按钮的间距 */
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #666;
  position: relative;
  height: 100%;
  padding: 0 15rpx; /* 图标项左右内边距，控制图标间距 */
  /* flex: 1; */ /* 不再让每个图标项平均分配，宽度由内容和padding决定 */
  text-align: center;
}

.action-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 20rpx;
  line-height: 1.2;
  white-space: nowrap;
}

.cart-badge {
  position: absolute;
  top: 6rpx;
  right: 5rpx; /* 调整角标位置 */
  background-color: #ff4d4f;
  color: white;
  font-size: 18rpx;
  padding: 1rpx 8rpx;
  border-radius: 15rpx;
  min-width: 16rpx;
  text-align: center;
  line-height: normal;
  border: 1rpx solid #fff;
}

/* 右侧按钮直接作为 .bottom-actions-bar 的子元素 */
.action-button {
  height: 72rpx;
  line-height: 72rpx;
  font-size: 26rpx;
  border-radius: 36rpx;
  color: #fff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  flex: 1; /* 让两个按钮平分剩余空间 */
  /* flex-basis: 0; */ /* flex-grow 生效的前提，也可以不设置，让flex-grow主导 */
  margin: 0 5rpx; /* 按钮之间的间距 */
}
/* 第一个按钮（加入购物车）的左边距可以取消，因为它前面有 .actions-left */
.add-to-cart-btn {
  background-image: linear-gradient(to right, #ffc800, #ffa500);
  margin-left: 0; /* 第一个按钮左边距为0 */
}

.buy-now-btn {
  background-image: linear-gradient(to right, #ff6a6a, #ff4d4f);
}


/* 规格选择弹窗样式 (保持不变) */
.specs-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.specs-popup-content {
  background-color: #fff;
  width: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
  max-height: 85vh;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.popup-header {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  flex-shrink: 0;
}

.popup-product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #eee;
  flex-shrink: 0;
}

.popup-product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  min-width: 0;
}

.popup-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.popup-stock,
.popup-selected-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.popup-close-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 32rpx;
  height: 32rpx;
  padding: 10rpx;
}

.popup-body {
  padding: 0 30rpx;
  box-sizing: border-box;
  flex: 1;
  overflow-y: auto;
}

.specs-section,
.quantity-section {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.specs-section:last-child,
.quantity-section:last-of-type {
  border-bottom: none;
}


.specs-title,
.quantity-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.specs-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.spec-item {
  padding: 12rpx 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  background-color: #f7f7f7;
  transition: all 0.2s ease;
}

.spec-item.active {
  border-color: #ff4d4f;
  background-color: #fff2f2;
  color: #ff4d4f;
}

.spec-item.disabled {
  color: #ccc;
  background-color: #f9f9f9;
  border-color: #eee;
  pointer-events: none;
  position: relative;
}
.spec-item.disabled::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  border-top: 1rpx solid #ddd;
  transform: translateY(-50%);
  opacity: 0.7;
}


.quantity-control {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 58rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  background-color: #f7f7f7;
  font-size: 36rpx;
  color: #333;
  box-sizing: border-box;
}
.quantity-btn.minus {
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}
.quantity-btn.plus {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.quantity-btn.disabled {
  color: #ccc;
  background-color: #f9f9f9;
  pointer-events: none;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  font-size: 28rpx;
  color: #333;
  min-height: 60rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.popup-confirm-btn-container {
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.popup-confirm-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-image: linear-gradient(to right, #ff6a6a, #ff4d4f);
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  text-align: center;
  border: none;
}
.popup-confirm-btn[disabled] {
  background-image: none;
  background-color: #fcc;
  color: #fff;
  opacity: 0.7;
}
