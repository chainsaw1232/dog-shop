/* orderDetail/index.wxss */
.container {
  padding-bottom: 120rpx;
}

/* 订单状态样式 */
.order-status {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(to right, #FF8C69, #FF6B6B);
  color: #fff;
}

.status-icon {
  margin-right: 30rpx;
}

.icon {
  width: 80rpx;
  height: 80rpx;
}

.status-info {
  flex: 1;
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 物流信息样式 */
.logistics-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.logistics-info {
  flex: 1;
}

.logistics-company {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.logistics-number {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.logistics-status {
  font-size: 26rpx;
  color: #FF8C69;
}

.arrow-right {
  margin-left: 20rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 通用区块样式 */
.address-section, .order-info-section, .products-section, .amount-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.section-title {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-content {
  padding: 20rpx 30rpx;
}

/* 地址信息样式 */
.address-info {
  display: flex;
  flex-direction: column;
}

.address-name-phone {
  margin-bottom: 10rpx;
}

.address-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-right: 20rpx;
}

.address-phone {
  font-size: 26rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

/* 订单信息样式 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #333;
}

.info-value-copy {
  display: flex;
  align-items: center;
}

.copy-btn {
  font-size: 24rpx;
  color: #FF8C69;
  margin-left: 10rpx;
  padding: 4rpx 10rpx;
  border: 1rpx solid #FF8C69;
  border-radius: 4rpx;
}

/* 商品列表样式 */
.product-list {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.product-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.product-price {
  font-size: 28rpx;
  color: #ff4d4f;
}

.product-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 金额明细样式 */
.amount-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.discount {
  color: #ff4d4f;
}

.amount-total {
  display: flex;
  justify-content: space-between;
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

/* 底部操作栏样式 */
.bottom-actions {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.bottom-actions button {
  margin-left: 20rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
}

.btn-cancel {
  color: #666;
  background-color: #f5f5f5;
  border: 1rpx solid #ddd;
}

.btn-secondary {
  color: #666;
  background-color: #fff;
  border: 1rpx solid #ddd;
}

.btn-primary {
  color: #fff;
  background-color: #FF8C69;
  border: none;
}

.btn-pay {
  color: #fff;
  background-color: #ff4d4f;
  border: none;
}
