/* modified_project/pages/orderDetail/index.wxss */
page {
  background-color: #f4f4f8;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Hiragino Sans GB',
    'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  color: #333;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 加载状态 */
.full-page-state {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.loading-image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}
.loading-state text, .empty-state-container text {
  font-size: 28rpx;
  color: #888;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
.empty-state-container {
  /* empty-state 组件通常会自己处理内部样式 */
}


.scroll-view-content {
  flex-grow: 1;
  padding-bottom: 130rpx; /* 为底部操作栏预留空间 */
  box-sizing: border-box;
}

/* 状态头部 */
.status-header-section {
  background-color: #FF8C69; /* 主题色 */
  color: #fff;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* 内容靠左 */
}
.status-header-section.completed, 
.status-header-section.cancelled {
  background-color: #666; /* 完成或取消状态用深灰色 */
}
.status-header-section.unpaid { background-color: #ff976a; }
.status-header-section.unshipped { background-color: #409eff; }
.status-header-section.shipped { background-color: #67c23a; }


.status-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}
.status-text-main {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.status-description {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 通用信息区块 */
.info-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 25rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

/* 地址区块 */
.address-section {
  display: flex;
  align-items: flex-start; /* 图标和内容垂直对齐 */
}
.section-icon-wrapper {
  margin-right: 20rpx;
  padding-top: 6rpx; /* 微调图标垂直位置 */
}
.section-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.7;
}
.address-details .user-info {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.address-details .user-info .phone {
  margin-left: 20rpx;
  color: #555;
  font-weight: normal;
}
.address-details .address-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 商品列表区块 */
.product-list-section .section-title-simple {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.order-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.order-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}
.order-item:first-child {
  padding-top: 0;
}

.item-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}
.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  min-width: 0;
}
.item-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 6rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item-spec {
  font-size: 22rpx;
  color: #999;
  background-color: #f7f7f7;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  align-self: flex-start;
  margin-bottom: 8rpx;
}
.item-price-quantity {
  margin-left: 20rpx; /* 与商品信息隔开 */
  text-align: right;
  flex-shrink: 0;
}
.item-price {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 5rpx;
}
.item-quantity {
  font-size: 24rpx;
  color: #999;
}

/* 金额详情区块 */
.amount-details-section .amount-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  padding: 10rpx 0;
}
.amount-details-section .amount-item .label {
  color: #666;
}
.amount-details-section .amount-item .value {
  color: #333;
  font-weight: 500;
}
.amount-details-section .amount-item .discount-value {
  color: #FF5000; /* 优惠金额用突出颜色 */
}
.amount-details-section .amount-item.total-payable .label {
  font-weight: bold;
  color: #333;
}
.amount-details-section .amount-item.total-payable .total-value {
  font-size: 32rpx;
  color: #FF5000;
  font-weight: bold;
}

/* 订单备注与订单特定信息 */
.remark-section .label,
.order-specifics-section .specific-item .label {
  color: #888;
  margin-right: 10rpx;
  flex-shrink: 0;
}
.remark-section .value,
.order-specifics-section .specific-item .value {
  color: #555;
  line-height: 1.5;
  word-break: break-all;
}
.order-specifics-section .specific-item {
  display: flex;
  font-size: 26rpx;
  padding: 8rpx 0;
}
.order-specifics-section .specific-item .selectable {
  color: #409eff; /* 可选择/复制的文本颜色 */
  display: flex;
  align-items: center;
}
.order-specifics-section .specific-item .copy-hint {
  font-size: 20rpx;
  color: #aaa;
  margin-left: 10rpx;
}


/* 底部操作按钮栏 */
.safe-area-for-buttons {
  height: 10rpx; /* 配合 scroll-view的 padding-bottom */
}
.action-button-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); /* 适配iPhone X等底部安全区域 */
  display: flex;
  justify-content: flex-end; /* 按钮靠右 */
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 100;
}
.bar-btn {
  height: 68rpx;
  line-height: 68rpx;
  font-size: 26rpx;
  border-radius: 34rpx;
  padding: 0 35rpx;
  margin-left: 20rpx;
  border: none;
  text-align: center;
}
.bar-btn[disabled] {
  opacity: 0.6;
  background-color: #ccc !important;
  color: #fff !important;
  border-color: #ccc !important;
}
.primary-btn {
  background-color: #FF8C69; /* 主题色 */
  color: #fff;
}
.secondary-btn {
  background-color: #fff;
  color: #555;
  border: 1rpx solid #ddd;
}
.contact-service-btn {
  /* 可以有特定样式，或者复用 secondary-btn */
  background-color: #f0f0f0;
  color: #555;
}