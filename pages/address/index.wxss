/* address/index.wxss */
.container {
  padding-bottom: 120rpx;
}

/* 地址列表样式 */
.address-list {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.address-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.address-item:last-child {
  border-bottom: none;
}

.address-content {
  display: flex;
  margin-bottom: 20rpx;
}

.address-info {
  flex: 1;
}

.address-name-phone {
  margin-bottom: 10rpx;
}

.address-name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-right: 20rpx;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.address-default {
  display: inline-block;
  font-size: 22rpx;
  color: #FF8C69;
  border: 1rpx solid #FF8C69;
  padding: 0 10rpx;
  border-radius: 4rpx;
  margin-left: 10rpx;
}

.address-detail {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.address-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.action-item.disabled {
  opacity: 0.5;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.action-item text {
  font-size: 26rpx;
  color: #666;
}

/* 空地址状态样式 */
.empty-address {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  background-color: #fff;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-address text {
  font-size: 28rpx;
  color: #999;
}

/* 添加地址按钮样式 */
.add-address-btn {
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  bottom: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #FF8C69;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
}

/* 地址表单弹窗样式 */
.address-form-popup {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  transform: translateY(100%);
  transition: all 0.3s;
}

.address-form-popup.show {
  visibility: visible;
  transform: translateY(0);
}

.popup-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: -1;
}

.popup-content {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.popup-header {
  padding: 30rpx;
  text-align: center;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
}

.popup-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.popup-close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 40rpx;
  color: #999;
}

.popup-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.region-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.placeholder {
  color: #999;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.switch-label {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

.popup-footer {
  padding: 20rpx 30rpx 40rpx;
}

.btn-save {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #FF8C69;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
}

/* 地区选择器样式 */
.region-picker-popup {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
  visibility: hidden;
  transform: translateY(100%);
  transition: all 0.3s;
}

.region-picker-popup.show {
  visibility: visible;
  transform: translateY(0);
}

.region-picker-content {
  background-color: #fff;
  height: 600rpx;
  display: flex;
  flex-direction: column;
}

.region-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.region-picker-cancel, .region-picker-confirm {
  font-size: 28rpx;
}

.region-picker-cancel {
  color: #999;
}

.region-picker-confirm {
  color: #FF8C69;
}

.region-picker-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.region-picker-view {
  flex: 1;
  width: 100%;
}

.picker-item {
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
}
