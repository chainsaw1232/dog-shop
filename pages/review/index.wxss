/* review/index.wxss */
.container {
  padding-bottom: 120rpx;
}

/* 商品信息样式 */
.product-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.product-info {
  display: flex;
}

.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.product-count {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  text-align: right;
}

/* 评分样式 */
.rating-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.optional {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.rating-stars {
  display: flex;
  margin-bottom: 10rpx;
}

.star {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  background-image: url('data:image/svg+xml;base64,');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.star.active {
  background-image: url('data:image/svg+xml;base64,');
}

.rating-text {
  font-size: 26rpx;
  color: #FF8C69;
}

/* 评价内容样式 */
.content-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.review-content {
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.content-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 上传图片样式 */
.image-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.image-upload {
  margin-top: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  font-size: 28rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.upload-btn text {
  font-size: 24rpx;
  color: #999;
}

/* 匿名评价样式 */
.anonymous-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.anonymous-switch {
  display: flex;
  align-items: center;
}

.anonymous-switch text {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

.anonymous-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  margin-left: 70rpx;
}

/* 提交按钮样式 */
.submit-section {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-submit {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #FF8C69;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
}

.btn-submit[disabled] {
  background-color: #ddd;
  color: #fff;
}
