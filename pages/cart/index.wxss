/* modified_project/pages/cart/index.wxss */
page {
  background-color: #f4f4f8;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Hiragino Sans GB',
    'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  color: #333;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative; /* 为底部操作栏定位 */
}

/* 初始加载状态 */
.initial-loading {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.loading-image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}
.initial-loading text {
  font-size: 28rpx;
  color: #888;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空购物车状态 */
.empty-cart-container {
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  /* empty-state 组件通常会处理自己的居中 */
}

/* 购物车列表滚动 */
.cart-scroll-view {
  flex-grow: 1;
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
  box-sizing: border-box;
}

.cart-items-list {
  padding: 20rpx 20rpx 0; /* 左右留白，上方留白 */
}

.cart-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.select-checkbox {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx; /* 增加点击区域 */
  height: 100%; /* 撑满商品项高度 */
  margin-right: 10rpx;
}

.checkbox-icon {
  width: 36rpx;
  height: 36rpx;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* 使价格和数量控制在垂直方向上分布 */
  min-width: 0; /* 防止flex item溢出 */
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-spec {
  font-size: 22rpx;
  color: #999;
  background-color: #f7f7f7;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  align-self: flex-start; /* 规格标签靠左 */
  margin-bottom: 8rpx;
}

.product-price {
  font-size: 30rpx;
  color: #FF5000; /* 主题价格色 */
  font-weight: bold;
}
.invalid-tag {
  font-size: 22rpx;
  color: #e54d42;
  margin-top: 8rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  margin-left: 20rpx; /* 与商品信息隔开 */
}

.quantity-btn {
  width: 48rpx;
  height: 48rpx;
  line-height: 44rpx; /* 轻微调整使文字居中 */
  text-align: center;
  border: 1rpx solid #ddd;
  color: #555;
  font-size: 36rpx;
  background-color: #f9f9f9;
}
.quantity-btn.decrease {
  border-radius: 8rpx 0 0 8rpx;
}
.quantity-btn.increase {
  border-radius: 0 8rpx 8rpx 0;
}
.quantity-btn.disabled {
  background-color: #f0f0f0;
  color: #bbb;
  border-color: #eee;
}

.quantity-input {
  width: 70rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  font-size: 28rpx;
  color: #333;
  min-height: 48rpx; /* 确保input高度 */
}
.cart-list-bottom-padding {
  height: 20rpx; /* 列表底部留白，防止最后一条被遮挡 */
}


/* 推荐商品 (猜你喜欢) */
.recommend-section {
  margin-top: 30rpx;
  background-color: #f4f4f8; /* 与页面背景一致 */
  padding: 0 20rpx 30rpx; /* 左右内边距 */
}
.section-title-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  padding-top: 20rpx;
}
.section-title-bar .line {
  flex: 1;
  height: 1px;
  background-color: #ddd;
}
.section-title-bar .title-text {
  font-size: 30rpx;
  color: #555;
  font-weight: bold;
  margin: 0 30rpx;
}
.recommend-product-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.product-card-wrapper { /* 用于推荐商品卡片的宽度控制 */
  width: calc(50% - 10rpx);
  margin-bottom: 20rpx;
}
.product-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.product-image-recommend {
  width: 100%;
  height: 320rpx;
  background-color: #f0f0f0;
}
.product-name-recommend {
  font-size: 26rpx;
  color: #333;
  padding: 10rpx 15rpx 5rpx;
  line-height: 1.4;
  height: calc(26rpx * 1.4 * 2);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.product-price-recommend {
  padding: 5rpx 15rpx 15rpx;
}
.product-price-recommend .current-price {
  font-size: 28rpx;
  color: #FF5000;
  font-weight: bold;
  margin-right: 10rpx;
}
.product-price-recommend .original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}
.recommend-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}
.loading-image-small {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  animation: spin 1s linear infinite;
}


/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx; /* 增加高度以便容纳删除按钮 */
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  z-index: 100;
}

.select-all-area {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
  margin-right: 20rpx; /* 与合计金额隔开 */
}
.select-all-area .checkbox-icon {
  margin-right: 10rpx;
}

.total-info {
  flex-grow: 1;
  display: flex;
  align-items: baseline; /* 使 ¥ 和价格对齐 */
  justify-content: flex-start; /* 内容靠左 */
  font-size: 26rpx;
  color: #333;
}
.total-text {
  margin-right: 5rpx;
}
.total-price {
  font-size: 32rpx;
  color: #FF5000;
  font-weight: bold;
}
.selected-count-text {
  font-size: 22rpx;
  color: #999;
  margin-left: 10rpx;
}

.remove-selected-btn,
.checkout-btn {
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  border-radius: 36rpx;
  padding: 0 30rpx;
  margin-left: 15rpx;
  border: none;
}

.remove-selected-btn {
  background-color: #f0f0f0;
  color: #555;
  border: 1rpx solid #ddd;
}
.remove-selected-btn[disabled] {
  background-color: #e9e9e9 !important;
  color: #bbb !important;
  border-color: #e0e0e0 !important;
}


.checkout-btn {
  background-color: #FF8C69; /* 主题色 */
  color: #fff;
}
.checkout-btn[disabled] {
  background-color: #FFBDAA !important; /* 主题色变淡 */
  color: #fff !important;
}