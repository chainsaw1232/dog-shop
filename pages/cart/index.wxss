/* pages/cart/index.wxss */
.container.cart-page {
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
  min-height: 100vh;
  background-color: #f4f4f4;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
  color: #999;
  font-size: 28rpx;
}

.loading-gif {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}
.loading-gif-small {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}


/* 购物车列表 */
.cart-list {
  background-color: #fff;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  margin-bottom: 20rpx; /* 给每个商品卡片下方增加间距 */
  border-radius: 16rpx; /* 给商品卡片添加圆角 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05); /* 轻微的阴影效果 */
}

.cart-item:last-child {
  border-bottom: none;
}

.item-selector {
  padding: 20rpx; /* 增大点击区域 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.select-icon {
  width: 40rpx;
  height: 40rpx;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-left: 10rpx;
  background-color: #f0f0f0; /* 图片未加载时的占位背景 */
}

.item-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 160rpx; /* 确保信息区域高度和图片一致 */
}

.item-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  background-color: #f7f7f7;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  align-self: flex-start; /* 让规格标签自适应内容宽度 */
  margin-bottom: 8rpx;
}

.item-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto; /* 将价格和数量选择器推到底部 */
}

.item-price {
  font-size: 30rpx;
  color: #ff5000;
  font-weight: bold;
}

.quantity-selector {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1rpx solid #ccc;
  color: #333;
  font-size: 36rpx;
}
.quantity-btn.decrease {
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}
.quantity-btn.increase {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.quantity-btn.disabled {
  background-color: #f8f8f8;
  color: #c0c0c0;
  border-color: #e0e0e0;
}

.quantity-input {
  width: 70rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  font-size: 28rpx;
  color: #333;
  min-height: 50rpx; /* 确保input高度 */
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  z-index: 100;
}

.select-all-section {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.select-all-section .select-icon {
  margin-right: 10rpx;
}

.total-price-section {
  font-size: 28rpx;
  color: #333;
  flex-grow: 1; /* 让合计部分占据更多空间 */
  text-align: right; /* 文字右对齐 */
  margin-right: 20rpx; /* 与结算按钮的间距 */
}

.total-price-value {
  color: #ff5000;
  font-weight: bold;
  font-size: 32rpx;
}

.action-buttons {
  display: flex;
  align-items: center;
}

.btn {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 35rpx;
  padding: 0 30rpx;
  text-align: center;
  margin-left: 20rpx;
}

.remove-btn {
  background-color: #ffc107; /* 橙黄色 */
  color: #fff;
  border: none;
}

.checkout-btn {
  background-color: #FF8C69; /* 主题橙色 */
  color: #fff;
  border: none;
}

.btn.disabled {
  background-color: #ddd;
  color: #aaa;
  pointer-events: none;
}


/* 购物车为空 */
.empty-cart-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 150rpx;
  padding-bottom: 50rpx;
}

.empty-cart-image {
  width: 280rpx;
  height: 280rpx; /* 根据实际图片调整 */
  margin-bottom: 30rpx;
}

.empty-cart-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 50rpx;
  background-color: #FF8C69;
  color: white;
  font-size: 30rpx;
  border-radius: 40rpx;
  text-align: center;
}

/* 为你推荐 */
.recommend-section {
  margin-top: 30rpx;
  background-color: #f4f4f4;
  padding: 20rpx 20rpx 0; /* 底部padding通过item的margin-bottom体现 */
}

.recommend-title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}
.recommend-title-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}


.recommend-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.recommend-item {
  width: calc(50% - 10rpx); /* 每行两个，减去中间间距 */
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden; /* 确保图片圆角生效 */
  display: flex;
  flex-direction: column;
}

.recommend-image {
  width: 100%;
  height: 320rpx; /* 固定高度，或者根据图片比例调整 */
  background-color: #f0f0f0;
}

.recommend-name {
  font-size: 26rpx;
  color: #333;
  padding: 16rpx 16rpx 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 76rpx; /* 预估两行文字高度 */
  line-height: 1.4;
}

.recommend-price-sales {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16rpx 16rpx;
  margin-top: auto; /* 将价格部分推到底部 */
}

.recommend-price {
  font-size: 28rpx;
  color: #ff5000;
  font-weight: bold;
}

.recommend-sales {
  font-size: 22rpx;
  color: #999;
}

.no-recommend {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 40rpx 0;
}
