/* pages/index/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #f4f4f4; /* 页面背景色 */
  min-height: 100vh;
}

/* 1. 顶部搜索栏 (如果添加的话) */
.search-bar {
  width: 100%;
  padding: 20rpx;
  background-color: #FF8C69; /* 主题色 */
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.search-bar input {
  flex-grow: 1;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.search-bar button {
  background-color: #fff;
  color: #FF8C69;
  border: none;
  border-radius: 30rpx;
  font-size: 28rpx;
}

/* 2. 轮播图 */
.banner-swiper {
  width: 100%;
  height: 380rpx; /* 根据实际图片调整高度 */
}

.banner-item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-placeholder {
  width: 100%;
  height: 380rpx;
  background-color: #e9e9e9;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
}

/* 3. 分类导航 */
.category-section {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx 0;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more-link {
  font-size: 26rpx;
  color: #666; /* 修改点：颜色从 #999 改为 #666，使其更清晰 */
  /* 备注：如果 “更多优惠 &gt;” 中的 “&gt;” 直接显示出来，
     这是 WXML 文件中的文本内容问题，应在 WXML 中将 “&gt;” 改为 “>” 或 “&amp;gt;”
     例如：<text class="more-link">更多优惠 &gt;</text> 或者 <text class="more-link">更多优惠 &amp;gt;</text>
     如果希望显示右箭头图标，可以使用 iconfont 或者 image 标签。
  */
}

.category-list {
  display: flex;
  justify-content: space-around; /* 或者 space-between */
  align-items: flex-start;
  flex-wrap: wrap; /* 如果一行显示不下则换行 */
  padding: 0 10rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%; /* 一行显示5个，可根据实际数量调整 */
  margin-bottom: 20rpx;
  text-align: center;
}

.category-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%; /* 圆形图标 */
  margin-bottom: 10rpx;
  background-color: #f0f0f0; /* 图标背景色，防止图片未加载时空白 */
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

/* 4. 优惠券区域 */
.coupon-section {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}

.coupon-scroll-list {
  white-space: nowrap; /* 横向滚动关键 */
  padding: 0 20rpx;
}

.coupon-item-wrapper {
  display: inline-block; /* 横向排列 */
  margin-right: 20rpx;
  width: 500rpx; /* 优惠券宽度 */
}
.coupon-item-wrapper:last-child {
  margin-right: 0;
}

.coupon-item {
  display: flex;
  align-items: center;
  background-image: linear-gradient(to right, #ffecd2 0%, #fcb69f 100%); /* 示例渐变背景 */
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  height: 150rpx; /* 优惠券高度 */
  box-sizing: border-box;
}

.coupon-value {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #e53935; /* 优惠金额颜色 */
  padding-right: 20rpx;
  border-right: 1rpx dashed #fff; /* 分隔线 */
  min-width: 120rpx;
  text-align: center;
}

.amount-symbol {
  font-size: 28rpx;
  font-weight: bold;
}

.amount-number {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}

.coupon-info {
  flex-grow: 1;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.coupon-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.coupon-condition,
.coupon-validity {
  font-size: 22rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 4rpx;
}

.coupon-action {
  margin-left: auto; /* 使按钮靠右 */
}

.receive-btn {
  background-color: #e53935;
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  height: auto;
  line-height: normal;
}

/* 5. 商品区域 (新品尝鲜、热销榜单通用) */
.product-section {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  padding-bottom: 20rpx; /* 给底部留出空间 */
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20rpx;
}

.product-card-item {
  width: calc(50% - 10rpx); /* 一行显示两个，减去间距 */
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
}

.product-image {
  width: 100%;
  height: 320rpx; /* 商品图片高度 */
  background-color: #f0f0f0; /* 图片未加载时的占位背景 */
}

.product-info {
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  flex-grow: 1; /* 使信息部分占满剩余空间 */
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  height: 78.4rpx; /* 28rpx * 1.4 * 2行 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 最多显示两行 */
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}

.product-price-row {
  display: flex;
  align-items: baseline; /* 价格符号和数字基线对齐 */
  margin-top: auto; /* 将价格推到底部 */
}

.product-price {
  font-size: 32rpx;
  color: #FF6B6B; /* 价格颜色 */
  font-weight: bold;
  margin-right: 10rpx;
}

.product-original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through; /* 原价删除线 */
}

.product-tags {
  padding: 0 16rpx 10rpx; /* 标签区域的内边距 */
  display: flex;
  flex-wrap: wrap; /* 标签多时换行 */
}

.tag {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx; /* 标签之间的间距 */
}

.new-tag {
  background-color: #E8F5E9; /* 淡绿色背景 */
  color: #4CAF50; /* 绿色文字 */
  border: 1rpx solid #A5D6A7;
}

.hot-tag {
  background-color: #FFF3E0; /* 淡橙色背景 */
  color: #FF9800; /* 橙色文字 */
  border: 1rpx solid #FFCC80;
}
.sales-tag {
  background-color: #fdecec;
  color: #e53935;
  border: 1rpx solid #f7b1b0;
}


/* 6. 加载更多提示 */
.load-more-hint {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0;
}

/* 7. 品牌信息 */
.brand-section {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.brand-logo {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

.brand-text {
  display: flex;
  flex-direction: column;
}

.brand-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.brand-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 页面加载状态 */
.page-loading, .page-error {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}
.page-error button {
  margin-top: 20rpx;
  background-color: #FF8C69;
  color: white;
}
