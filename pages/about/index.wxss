/* pages/about/index.wxss */
.about-page {
  background-color: #f4f4f4;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.store-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%; /* 如果logo是圆的，或者用16rpx的圆角 */
  margin-bottom: 20rpx;
  background-color: #eee; /* 图片未加载时的占位背景 */
}

.main-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}

.content-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.store-description {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
  text-align: justify; 
}

.sub-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-top: 10rpx; 
}

.commitment-section,
.contact-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.commitment-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); 
  gap: 30rpx; 
}

.commitment-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 20rpx;
  background-color: #f9f9f9; 
  border-radius: 12rpx;
}

.commitment-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.commitment-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.commitment-text {
  font-size: 24rpx;
  color: #777;
  line-height: 1.5;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.contact-item text {
  flex: 1; 
}

.action-arrow {
  display: flex;
  align-items: center;
  color: #888;
}

.action-text {
  font-size: 26rpx;
  color: #FF8C69; 
  margin-right: 10rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

.qrcode-item .action-arrow {
  display: flex;
  align-items: center;
}

.qrcode-image-preview {
  width: 48rpx; 
  height: 48rpx;
  margin-right: 10rpx;
  border: 1rpx solid #eee;
}
