/* coupon/index.wxss */
.container {
  padding-bottom: 30rpx;
}

/* 优惠券选项卡样式 */
.coupon-tabs {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #FF8C69;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #FF8C69;
}

/* 优惠券列表样式 */
.coupon-list {
  padding: 20rpx;
}

.coupon-item {
  display: flex;
  height: 180rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(to right, #fff0e5, #fff);
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  border: 1rpx solid #FF8C69;
}

.coupon-item.disabled {
  background: linear-gradient(to right, #f5f5f5, #fff);
  border: 1rpx solid #ddd;
  opacity: 0.8;
}

.coupon-item::before {
  content: "";
  position: absolute;
  left: 210rpx;
  top: 0;
  bottom: 0;
  width: 20rpx;
  background: radial-gradient(circle at left, transparent 10rpx, #fff 10rpx, #fff 20rpx, transparent 20rpx);
  background-size: 20rpx 40rpx;
  background-repeat: repeat-y;
}

.coupon-left {
  width: 210rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.coupon-value {
  display: flex;
  align-items: baseline;
}

.coupon-unit {
  font-size: 28rpx;
  color: #ff4d4f;
}

.coupon-amount {
  font-size: 60rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-left: 4rpx;
}

.coupon-condition {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

.coupon-right {
  flex: 1;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

.coupon-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.coupon-scope {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.coupon-date {
  font-size: 22rpx;
  color: #999;
}

.coupon-status {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.btn-to-shop {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #FF8C69;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
}

/* 加载更多样式 */
.loading-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}
