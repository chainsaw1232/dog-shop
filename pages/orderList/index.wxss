/* orderList/index.wxss */
.container {
  padding-bottom: 30rpx;
}

/* 订单状态选项卡样式 */
.order-tabs {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #FF8C69;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #FF8C69;
}

/* 订单列表样式 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部样式 */
.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-number {
  font-size: 26rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  color: #FF8C69;
  font-weight: bold;
}

/* 订单商品样式 */
.order-products {
  margin-bottom: 20rpx;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.product-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.product-price {
  font-size: 28rpx;
  color: #ff4d4f;
}

.product-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 订单金额样式 */
.order-amount {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 26rpx;
  color: #666;
}

.order-amount text:last-child {
  font-weight: bold;
  color: #333;
}

/* 订单操作样式 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.order-actions button {
  margin-left: 20rpx;
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}

.btn-cancel {
  color: #666;
  background-color: #f5f5f5;
  border: 1rpx solid #ddd;
}

.btn-secondary {
  color: #666;
  background-color: #fff;
  border: 1rpx solid #ddd;
}

.btn-primary {
  color: #fff;
  background-color: #FF8C69;
  border: none;
}

.btn-pay {
  color: #fff;
  background-color: #ff4d4f;
  border: none;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.btn-to-shop {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #FF8C69;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
}

/* 加载更多样式 */
.loading-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}
