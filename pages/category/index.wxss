/* pages/category/index.wxss */
.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f4f4f4;
}

/* 筛选/排序栏样式 (如果启用) */
.filter-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 88rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #333;
}

.sort-item {
  flex: 1;
  text-align: center;
  line-height: 88rpx;
  position: relative;
}

.sort-item.active {
  color: #ff8c69; /* 主题色 */
}

.sort-price .sort-arrows {
  display: inline-flex;
  flex-direction: column;
  margin-left: 8rpx;
  position: relative;
  top: -2rpx; /* 微调对齐 */
}

.sort-price .arrow {
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
}

.sort-price .arrow.up {
  border-bottom: 10rpx solid #ccc;
  margin-bottom: 4rpx;
}
.sort-price .arrow.up.active {
  border-bottom-color: #ff8c69;
}

.sort-price .arrow.down {
  border-top: 10rpx solid #ccc;
}
.sort-price .arrow.down.active {
  border-top-color: #ff8c69;
}


/* 内容区域布局 */
.content-wrapper {
  display: flex;
  flex: 1; /* 占据剩余高度 */
  overflow: hidden; /* 防止内部滚动影响外部 */
}

.content-wrapper.with-sidebar {
  /* 如果有侧边栏，则启用此样式 */
}

/* 左侧分类导航 */
.left-sidebar {
  width: 180rpx;
  height: 100%;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

.left-category-item {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 10rpx;
}

.left-category-item.active {
  background-color: #fff;
  color: #ff8c69; /* 主题色 */
  font-weight: bold;
  border-left: 6rpx solid #ff8c69;
}

/* 右侧商品列表容器 */
.right-product-list-container {
  flex: 1;
  height: 100%;
  background-color: #f4f4f4;
  box-sizing: border-box;
  padding-top: 20rpx; /* 给商品列表一些顶部间距 */
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 10rpx; /* 左右各10rpx的内边距 */
  justify-content: space-between;
}

.product-item-wrapper {
  width: calc(50% - 10rpx); /* 两列布局，减去中间的间隙 */
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.product-image {
  width: 100%;
  height: 340rpx; /* 根据实际图片比例调整 */
  display: block; /* 消除图片底部空隙 */
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  height: 78.4rpx; /* 约两行的高度 */
  /* 多行省略在 text-ellipsis-2 class 中实现 */
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-price {
  margin-top: 10rpx;
  display: flex;
  align-items: baseline;
}

.price-current {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.price-original {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.product-sales {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}

.product-tag {
  position: absolute;
  top: 16rpx;
  left: 0;
  padding: 4rpx 16rpx;
  height: 36rpx;
  line-height: 36rpx;
  background-color: #FF8C69;
  color: #fff;
  font-size: 20rpx;
  border-radius: 0 18rpx 18rpx 0;
}
.new-tag {
  background-color: #ffab2d; /* 新品标签颜色 */
}
.hot-tag {
  background-color: #ff4d4f; /* 热销标签颜色 */
}


/* 加载更多和空状态样式 */
.loading-more, .empty-state-container {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}
.loading-more.no-more {
  color: #ccc;
}

.loading-icon {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #e9e9e9;
  border-top-color: #FF8C69;
  border-radius: 50%;
  display: inline-block;
  animation: spin 0.8s linear infinite;
  margin-right: 10rpx;
  vertical-align: middle;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-state-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 150rpx; /* 适当调整，让它更居中 */
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-action-btn {
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 60rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #FF8C69; /* 主题色 */
  border-radius: 36rpx;
}
.empty-action-btn.retry-button {
   background-color: #ffab2d;
}

/* 骨架屏样式 */
.skeleton-loading-container {
  padding: 20rpx 10rpx 0;
}
.product-grid-skeleton {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.product-item-skeleton {
  width: calc(50% - 10rpx);
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  box-sizing: border-box;
}
.skeleton-image {
  width: 100%;
  height: 300rpx; /* 根据实际图片高度调整 */
  background-color: #e0e0e0;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}
.skeleton-line {
  height: 28rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  margin-bottom: 12rpx;
}
.skeleton-line.short {
  width: 60%;
}
.skeleton-line.long {
  width: 90%;
}

