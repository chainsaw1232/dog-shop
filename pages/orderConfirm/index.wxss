/* pages/orderConfirm/index.wxss */
.page {
  background-color: #f4f4f4;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部提交栏留出空间 */
}

/* 地址区域 */
.address-section {
  background-color: #fff;
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  position: relative; /* 用于背景条纹 */
}
.address-section::before { /* 添加条纹背景 */
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 6rpx;
  background: repeating-linear-gradient(
    -45deg,
    #FFCDD2, /* 浅红色 */
    #FFCDD2 10rpx,
    #FFEBEE 10rpx, /* 更浅的红色或白色 */
    #FFEBEE 20rpx
  );
}
.address-icon { /* 地址图标 (可选) */
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.address-details {
  flex: 1;
}
.address-user-info {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.address-user-info text:first-child {
  margin-right: 20rpx;
}
.address-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.no-address {
  font-size: 28rpx;
  color: #FF6F00; /* 提醒用户选择或添加地址 */
  flex: 1;
  text-align: left;
}
.arrow-right {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
  margin-left: 20rpx;
}

/* 商品信息 */
.order-items-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 0 24rpx;
}
.section-title-bar { /* 商品信息标题栏 */
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.order-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.order-item:last-child {
  border-bottom: none;
}
.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0; /* 占位背景 */
}
.product-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* 让价格和数量部分在底部 */
}
.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}
.product-spec { 
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}
.product-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.product-price {
  font-size: 28rpx;
  color: #e64340; 
  font-weight: 500;
}
.product-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 配送方式、优惠券、备注 */
.order-options-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}
.option-item:last-child {
  border-bottom: none;
}
.option-label {
  font-weight: 500;
}
.option-value, .coupon-display {
  color: #666;
  display: flex;
  align-items: center;
  max-width: 70%; /* 防止优惠券名称过长导致箭头换行 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.coupon-display.available { 
  color: #FF6F00; 
  font-weight: 500;
}
.option-value image, .coupon-display image.arrow-right-icon { /* 右箭头特定类名 */
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
  opacity: 0.6;
  flex-shrink: 0; /* 防止箭头被压缩 */
}
.remark-input {
  width: 100%;
  text-align: right;
  font-size: 28rpx;
  color: #666;
}

/* 金额明细 */
.amount-summary-section {
  background-color: #fff;
  padding: 20rpx 24rpx;
}
.amount-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  padding: 12rpx 0;
}
.amount-label {}
.amount-value {}
.amount-item .amount-value.highlight { 
  color: #e64340;
  font-weight: bold;
}

/* 底部提交栏 */
.submission-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 99;
}
.total-payable {
  font-size: 26rpx;
  color: #333;
}
.total-amount-value {
  font-size: 36rpx;
  color: #e64340;
  font-weight: bold;
  margin-left: 8rpx;
}
.submit-order-btn {
  background-color: #FF6F00; 
  color: white;
  font-size: 30rpx;
  padding: 0 60rpx; 
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  border: none;
}
.submit-order-btn.disabled {
  background-color: #FFCCBC; 
  color: #fff;
  opacity: 0.7;
}


/* --- 优惠券弹窗样式 --- */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
  z-index: 1000;
}
.popup-mask.show {
  opacity: 1;
  visibility: visible;
}
.coupon-popup-content {
  background-color: #fff;
  width: 100%;
  max-height: 75vh; /* 最大高度，防止弹窗过高 */
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}
.popup-mask.show .coupon-popup-content {
  transform: translateY(0);
}

.coupon-popup-header {
  display: flex;
  justify-content: center; /* 标题居中 */
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative; /* 为关闭按钮定位 */
}
.popup-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.close-popup-btn {
  position: absolute;
  top: 50%;
  right: 24rpx;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
  padding: 10rpx; /* 增大点击区域 */
}

.coupon-popup-body {
  flex: 1; /* 占据剩余空间并可滚动 */
  padding: 20rpx 0; /* 上下留白，左右由内部item控制 */
  background-color: #f7f7f7; /* 弹窗内容区背景色 */
}

.coupon-item-wrapper {
  background-color: #fff;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  padding: 20rpx;
  border: 2rpx solid #eee; /* 默认边框 */
  transition: border-color 0.2s ease, box-shadow 0.2s ease; /* 过渡效果 */
  position: relative;
}

/* 选中状态的优惠券 - “亮起” */
.coupon-item-wrapper.selected {
  border-color: #FF6F00; /* 主题橙色边框 */
  box-shadow: 0 0 10rpx rgba(255, 111, 0, 0.2); /* 橙色阴影 */
}
.coupon-item-wrapper.selected .coupon-name {
  color: #FF6F00; /* 选中时名称也变色 */
}


.coupon-item-inner {
  display: flex;
  align-items: center;
}

.coupon-value-section { /* 左侧优惠金额/折扣区域 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #FF6F00; /* 主题橙色 */
  font-weight: bold;
  padding-right: 20rpx;
  margin-right: 20rpx;
  border-right: 1rpx dashed #ddd; /* 虚线分隔 */
  min-width: 120rpx; /* 固定一个最小宽度 */
  text-align: center;
}
.coupon-item-wrapper.selected .coupon-value-section {
  color: #FF6F00; /* 确保选中时颜色不变或更突出 */
}

.coupon-value-section .coupon-currency {
  font-size: 24rpx;
  line-height: 1;
}
.coupon-value-section .coupon-amount {
  font-size: 48rpx;
  line-height: 1.1;
}
.coupon-value-section .coupon-unit {
  font-size: 28rpx;
  margin-left: 4rpx;
  line-height: 1;
}

.coupon-main-info { /* 中间优惠券主要信息 */
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.coupon-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
  /* 单行省略 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.coupon-condition, .coupon-validity {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}
.coupon-validity {
  margin-top: 4rpx;
}

.coupon-description { /* 优惠券额外描述 */
  font-size: 22rpx;
  color: #aaa;
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid #f5f5f5;
}


.coupon-select-indicator { /* 右侧选择图标区域 */
  margin-left: 20rpx;
  width: 40rpx; /* 固定宽度给图标 */
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.select-icon {
  width: 40rpx;
  height: 40rpx;
}

/* “不使用优惠券”选项的特殊样式 */
.no-coupon-option .coupon-main-info .coupon-name {
  font-weight: normal;
  font-size: 28rpx;
}
.no-coupon-option.selected .coupon-main-info .coupon-name {
  color: #FF6F00; /* 选中“不使用”时，文字也变色 */
}

.no-coupons-in-popup {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
}


.coupon-popup-footer {
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  background-color: #fff; /* 确保有背景色 */
}
.confirm-coupon-btn {
  background-color: #FF6F00; /* 主题强调色 */
  color: white;
  font-size: 30rpx;
  font-weight: 500;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  text-align: center;
  border: none;
}
.confirm-coupon-btn:active {
  background-color: #e65c00; /* 点击效果 */
}