/* orderConfirm/index.wxss */
.container {
  padding-bottom: 120rpx;
}

/* 收货地址样式 */
.address-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.address-info {
  flex: 1;
}

.address-name-phone {
  margin-bottom: 10rpx;
}

.address-name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-right: 20rpx;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.no-address {
  flex: 1;
  font-size: 30rpx;
  color: #999;
}

.address-arrow {
  margin-left: 20rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 商品列表样式 */
.products-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.product-list {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.product-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.product-price {
  font-size: 30rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.product-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 配送方式和优惠券样式 */
.delivery-section, .coupon-section {
  background-color: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.section-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.coupon-section .section-item {
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: #333;
}

.item-value {
  font-size: 28rpx;
  color: #666;
}

.primary-color {
  color: #FF8C69;
}

.item-value-arrow {
  display: flex;
  align-items: center;
}

.item-value-arrow .item-value {
  margin-right: 10rpx;
}

/* 订单备注样式 */
.remark-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.remark-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.remark-input {
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

/* 金额明细样式 */
.amount-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.amount-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.discount {
  color: #ff4d4f;
}

.amount-total {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

/* 底部支付栏样式 */
.pay-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.pay-amount {
  flex: 1;
  display: flex;
  align-items: baseline;
  font-size: 28rpx;
  color: #333;
}

.pay-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.btn-pay {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
  margin: 0;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 优惠券弹窗样式 */
.coupon-popup {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  transform: translateY(100%);
  transition: all 0.3s;
}

.coupon-popup.show {
  visibility: visible;
  transform: translateY(0);
}

.popup-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: -1;
}

.popup-content {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.popup-header {
  padding: 30rpx;
  text-align: center;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
}

.popup-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.popup-close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 40rpx;
  color: #999;
}

.popup-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.coupon-list {
  max-height: 600rpx;
}

.coupon-item {
  display: flex;
  height: 180rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(to right, #f5f5f5, #fff);
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.coupon-item.active {
  background: linear-gradient(to right, #fff0e5, #fff);
  border: 1rpx solid #FF8C69;
}

.coupon-item::before {
  content: "";
  position: absolute;
  left: 210rpx;
  top: 0;
  bottom: 0;
  width: 20rpx;
  background: radial-gradient(circle at left, transparent 10rpx, #fff 10rpx, #fff 20rpx, transparent 20rpx);
  background-size: 20rpx 40rpx;
  background-repeat: repeat-y;
}

.coupon-left {
  width: 210rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.coupon-value {
  display: flex;
  align-items: baseline;
}

.coupon-unit {
  font-size: 28rpx;
  color: #ff4d4f;
}

.coupon-amount {
  font-size: 60rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-left: 4rpx;
}

.coupon-condition {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

.coupon-right {
  flex: 1;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

.coupon-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.coupon-date {
  font-size: 22rpx;
  color: #999;
}

.coupon-select {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.select-icon {
  width: 40rpx;
  height: 40rpx;
}

.no-coupon {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.popup-footer {
  padding: 20rpx 30rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-confirm {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #FF8C69;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}
