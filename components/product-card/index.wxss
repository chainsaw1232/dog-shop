/* components/product-card/index.wxss */
.product-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 默认模式样式 */
.product-card.default {
  width: 100%;
}

.product-image-container {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  overflow: hidden;
}

.product-image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.product-tag {
  position: absolute;
  top: 16rpx;
  left: 0;
  background-color: #FF8C69;
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 0 6rpx 6rpx 0;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  height: 78rpx;
}

.product-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
}

.price-unit {
  font-size: 24rpx;
  color: #ff4d4f;
}

.price-value {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-left: 2rpx;
}

.price-original {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.product-sales {
  font-size: 22rpx;
  color: #999;
}

.product-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
}

.action-btn.favorite {
  background-color: #f5f5f5;
}

.action-btn.favorite.active {
  background-color: #fff0e5;
}

.action-btn.cart {
  background-color: #fff0e5;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 简洁模式样式 */
.product-card.simple {
  width: 100%;
}

.product-card.simple .product-info {
  padding: 12rpx;
}

.product-card.simple .product-name {
  font-size: 26rpx;
  height: 72rpx;
}

.product-card.simple .price-unit {
  font-size: 22rpx;
}

.product-card.simple .price-value {
  font-size: 28rpx;
}

/* 横向模式样式 */
.product-card.horizontal {
  display: flex;
  padding: 20rpx;
}

.h-product-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.h-product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.h-product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.h-product-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.h-product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.h-product-price {
  display: flex;
  align-items: baseline;
}

.h-product-sales {
  font-size: 22rpx;
  color: #999;
}

/* 文本省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
