<!--components/loading/index.wxml-->
<view class="loading-container {{fullScreen ? 'full-screen' : ''}}" wx:if="{{show}}">
  <view class="loading-wrapper">
    <image class="loading-image" src="{{loadingImage}}" mode="aspectFit"></image>
    <text class="loading-text" wx:if="{{text}}">{{text}}</text>
  </view>
</view>
