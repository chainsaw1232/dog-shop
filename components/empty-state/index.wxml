<!--components/empty-state/index.wxml-->
<view class="empty-container">
  <image src="{{imageMap[type]}}" class="empty-image" mode="aspectFit"></image>
  <text class="empty-text">{{text}}</text>
  <button wx:if="{{showButton && buttonText}}" class="empty-button" bindtap="onButtonTap">{{buttonText}}</button>
</view>
