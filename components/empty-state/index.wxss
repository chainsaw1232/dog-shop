/* components/empty-state/index.wxss */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-button {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #FF8C69;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
}
